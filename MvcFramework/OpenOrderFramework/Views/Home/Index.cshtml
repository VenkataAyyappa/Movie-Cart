@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Shiva Movies</h1>
    <p class="lead">Browse our great selection of Movies, Video Games, and TV Series</p>
    <p><button type="button" class="btn btn-primary btn-large" onclick="location.href='@Url.Action("Index", "Items")'">Start Shopping &raquo;</button></p>
</div>
<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <img src="https://i.annihil.us/u/prod/marvel/movies/blackpanther/social/assets/global_share_1200x630.jpg" alt="Black Panther">
        </div>

        <div class="item">
            <img src="https://www.thebetterindia.com/wp-content/uploads/2015/07/bahubali.jpg" alt="Baahubali 2">
        </div>

        <div class="item">
            <img src="https://screenrant.com/wp-content/uploads/2017/08/Deadpool-and-The-Avengers.jpg" alt="Avengers">
        </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

